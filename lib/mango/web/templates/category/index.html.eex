<h1 class="page-title"><%= String.capitalize(@category_name) %></h1>
<div>
  <div class="row">
    <%= for product <- @products do %>
        <div class="col-md-4 col-sm-4 col-lg-3">
          <%= render Mango.Web.ProductView, "product_card.html", product: product %>
        </div>
    <% end %>
  </div>
</div>
